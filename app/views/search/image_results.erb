<div class="container">
    
    <!-- Page Heading -->
    <div class="row">
        <div id="results" class="col-lg-12">
            <h1 class="page-header white">Search Results
            </h1>
        </div>
    </div>
    <!-- /.row -->

<!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8 img_results">
				<img class="img-responsive" src="<%= @image.gsub(/^public\//, "") %>">
            </div>

            <div class="col-md-4">
			<% if @matches.nil? %>
				<h2 class="white">No Results Found!</h2>
                <a class="btn btn-primary" href="/">Search Again? <span class="glyphicon glyphicon-chevron-right"></span></a>
			<% else %>
                <% if @matches.count > 1%>
                    <h2><%= @matches.count %> Pieces Found!</h2>
                    <a class="btn btn-primary" href="/">Search Again? <span class="glyphicon glyphicon-chevron-right"></span></a>
                <% else %>
                    <h2>1 Piece Found!</h2>
                    <a class="btn btn-primary" href="/">Search Again? <span class="glyphicon glyphicon-chevron-right"></span></a>
                <% end %>
            </div>

        </div>
<!-- /.row -->


	<div class="row ">
			<% @matches.each do |match| %>
			<div class="col-md-4 col-sm-6 portfolio-item">
                <a href="/<%= image_finder(match) %>" >
                   	<img src="<%= match.gsub(/^public\//, "") %>">
                </a>
                <div class="portfolio-caption">
                    <h4></h4>
                    <p class="text-muted"></p>
                </div>
            </div>
		<% end %>


	</div>
<% end %>
</div>
