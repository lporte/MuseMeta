<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div id="results" class="col-lg-12">
            <h1 class="page-header white">Search Results:
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Results -->
    <div class="row results">

        <% if @artists.nil? && @artworks.nil? || @artworks.first. %>

			<div id="results" class="col-lg-12">
				<h3>Nothing Found!</h3>
				<a class="btn btn-primary" href="/">Search Again? <span class="glyphicon glyphicon-chevron-right"></span></a>
			</div>

		<% else %>

			<% if @artworks.present? %>
				<% @artworks.each do |artwork| %>

		        <div class="col-md-7">
		            <a href="/artworks/<%= artwork.id %>">
		                <img class="img-responsive" src="<%= artwork.img_url %>" alt="">
		            </a>
		        </div>

		        <div class="col-md-5">
		            <h3><%= artwork.title %></h3>
		            <h4><%= artwork.artist.name.gsub(/\((.*)/, "") %></h4>
		            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p>
		            <a class="btn btn-primary" href="/artworks/<%= artwork.id %>">View Artwork <span class="glyphicon glyphicon-chevron-right"></span></a>
		        </div>
		        <hr>
				<% end %>
			<% end %>

		<% end %>
		        
	</div>
			
	
	<% if @artists.present? %>
    <div class="row results">	
        <div class="col-md-7">
            <a href="/artists/<%=@artists.id%>">
                <img class="img-responsive" src="<%= @artists.artworks.first.img_url %>" alt="">
            </a>
        </div>

        <div class="col-md-5">
            <h3><%= @artists.name.gsub(/\((.*)/, "") %></h3>
            <h4><%= @artists.name.gsub(/(.*)\(/, "") %></h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p>
            <a class="btn btn-primary" href="#">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
        <hr>
    </div>

	<% end %>


</div>






